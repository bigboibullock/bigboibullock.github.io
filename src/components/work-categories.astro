---
import WorkCategory from "./work-category.astro";
---

<ul>
  <li>
    <WorkCategory category="animation" />
  </li>
  <li>
    <WorkCategory category="web" />
  </li>
  <li>
    <WorkCategory category="video" />
  </li>
  <li>
    <WorkCategory category="digital" />
  </li>
</ul>

<style>
  ul {
    height: 100%;
    display: grid;
    grid-template-rows: repeat(4, 1fr);

    gap: 1rem;

    margin: 0;
    padding: 0;

    list-style-type: none;

    @media (width < 768px) {
      padding-block-start: 2rem;

      li {
        aspect-ratio: 1;
      }
    }

    @media (width >= 768px) {
      display: grid;
      grid-template-rows: repeat(4, 1fr);
    }

    @media (width >= 1128px) {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
    }

    li {
      background: black;
      text-transform: uppercase;
    }
  }
</style>
