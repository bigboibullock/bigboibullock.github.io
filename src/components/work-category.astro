---
import Picture from "astro/components/Picture.astro";
import { getCategoryCollection, type Category } from "../utils";

interface Props {
  category: Category;
}

const { category } = Astro.props;

const items = await getCategoryCollection(category);
const firstItem = items[0];
---

<a href={"/work/" + category}>
  <Picture
    src={firstItem.data.image}
    formats={["avif", "webp"]}
    alt={firstItem.data.image_alt}
  />
  <span>{category}</span>
</a>

<style>
  a {
    color: white;
    text-decoration: none;
    height: 100%;
    width: 100%;

    display: grid;
    overflow: hidden;

    > * {
      grid-area: 1 / 1;
      place-self: center;
    }

    span {
      z-index: 1;
      font-size: 4rem;
      font-weight: bolder;
    }

    picture {
      height: 100%;
      width: 100%;

      transform: scale(1);
      filter: brightness(0.45);
      transition: 150ms ease-out;
      transition-property: transform, filter;
    }

    picture img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    &:hover {
      picture {
        transform: scale(1.025);
        filter: brightness(0.55);
        transition: 260ms cubic-bezier(0.165, 0.84, 0.44, 1);
        transition-property: transform, filter;
      }
    }
  }
</style>
